<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-4">
        <%= image_tag @post.image.url(:medium) %>
        <div class="star-rating" data-score= <%= @avg_review %> ></div>
        <em><%= "#{@reviews.length} reviews" %></em>
        <div class="table-responsive">
          <table class="table">
            <tbody>
              <tr>
                <td><strong>Title:</strong></td>
                <td><%= @post.title %></td>
              </tr>
              <tr>
                <td><strong>Description:</strong></td>
                <td><%= @post.description %></td>
              </tr>
              <tr>
                <td><strong>price:</strong></td>
                <td><%= @post.price %></td>
              </tr>
              <tr>
                <td><strong>Number of interest requests:</strong></td>
                <td><%= @post.number_of_buyers %></td>
              </tr>
            </tbody>
          </table>
          <%= link_to "Write a Review", new_post_review_path(@post) %><br>
          <%= link_to "Express interest", post_connect_path(@post) %>
        </div>
      </div>
      <div class="col-md-7 col-md-offset-1">
        <h1 class="review_title"><%= @post.title %></h1>
        <p><%= @post.description %></p>

        <% if @reviews.blank? %>
          <h3>No reviews just yet, would you like to add the first!</h3>
          <%= link_to "Write Review", new_post_review_path(@post), class: "btn btn-danger" %>
        <% else %>
          <% @reviews.each do |review| %>
            <div class="reviews">
              <div class="star-rating" data-score= <%= review.rating %> ></div>
							<p><%= review.title %></p>
							<p><%= review.description %></p>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<script>
    $('.star-rating').raty({
      path: '/assets/',
      readOnly: true,
      score: function() {
            return $(this).attr('data-score');
    }
  });
</script>
